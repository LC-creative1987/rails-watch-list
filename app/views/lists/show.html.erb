<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1533488765986-dfa2a9939acd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=967&q=80);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>


<!-- Create a link to add a bookmark to the list -->

<%= link_to 'New bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>

<!-- DISPLAY THE MOVIES HERE -->
<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card col-4 rounded m-2 p-2">
      <img src="<%= bookmark.movie.poster_url %>" alt="">
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.movie.overview %></p>
      <%= link_to 'delete', bookmark_path(bookmark), method: 'delete', class: 'btn btn-danger position-absolute delete-button' %>
    </div>
    <% end %>
  </div>
</div>
